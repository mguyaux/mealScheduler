<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity RecipeIngredient.
    -->
    <changeSet id="20221208201644-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="recipe_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient__recipe_id"
                                 referencedColumnNames="id"
                                 referencedTableName="recipe"/>

        <addForeignKeyConstraint baseColumnNames="unit_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient__unit_id"
                                 referencedColumnNames="id"
                                 referencedTableName="mesure"/>

        <addForeignKeyConstraint baseColumnNames="ingredient_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient__ingredient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ingredient"/>
    </changeSet>
</databaseChangeLog>
